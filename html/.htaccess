RewriteRule ^userprofile/(.*)$ /cgi-bin/index.cgi?action=view_profile&userid=$1
RewriteRule ^companyprofile/(.*)$ /cgi-bin/ajax_anyrole_1.cgi?action=view_company_profile_template&id=$1

